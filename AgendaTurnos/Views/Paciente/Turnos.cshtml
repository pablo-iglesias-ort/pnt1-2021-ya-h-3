
@model IEnumerable<AgendaTurnos.Models.Turno>

@{
    ViewData["Title"] = "Turnos";
}

<h1>Turnos</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profesional)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profesional.Prestacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Confirmado)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaSolicitud)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Profesional.Apellido)
                @Html.DisplayFor(modelItem => item.Profesional.Nombre)
            </td>
            <td>                      
                @Html.DisplayFor(modelItem => item.Profesional.Prestacion.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Confirmado)
            </td>
            <td>
                @if (item.Confirmado && item.Activo && User.IsInRole(Rol.Paciente.ToString()))
                {
                    <a asp-controller="Turno" asp-action="Edit" asp-route-id="@item.Id">Cancelar Turno</a>

                }
            </td>
        </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index" asp-controller="Home" asp-route-id=@ViewData["PacienteId"] >Volver al Inicio</a>
</div>
